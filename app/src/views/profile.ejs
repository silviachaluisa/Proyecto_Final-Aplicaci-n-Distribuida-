<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100 dark:bg-gray-900 font-sans leading-normal tracking-normal">
    <div class="max-w-4xl mx-auto p-6 bg-white dark:bg-gray-800 shadow-lg rounded-lg mt-6">
        <h1 class="text-3xl font-semibold text-gray-800 dark:text-white mb-6 text-center">Perfil de Usuario</h1>

        <!-- Ícono de perfil -->
        <div class="flex justify-center mb-6">
            <div class="w-32 h-32 bg-blue-500 rounded-full flex items-center justify-center">
                <i class="fas fa-user text-white text-4xl"></i>
            </div>
        </div>

        <!-- Notificación de éxito o error -->
        <div id="notification" class="hidden flex items-center p-4 mb-4 border rounded-md bg-gray-800 text-white">
            <div id="notification-icon-container" class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-500 text-white flex items-center justify-center mr-3">
                <i id="notification-icon" class="fa"></i>
            </div>
            <span id="notification-message" class="text-sm"></span>
        </div>

        <!-- Formulario de actualización de perfil -->
        <form id="profile-form" class="space-y-6">
            <!-- Campo de Nombre de Usuario -->
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-700 dark:text-white">Nombre de usuario</label>
                <input type="text" id="name" name="name" class="w-full p-3 border border-gray-300 dark:bg-gray-700 dark:text-white rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Nombre de usuario">
            </div>

            <!-- Campo de Correo Electrónico -->
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-white">Correo electrónico</label>
                <input type="email" id="email" name="email" class="w-full p-3 border border-gray-300 dark:bg-gray-700 dark:text-white rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Correo electrónico">
            </div>

            <!-- Botón de Actualización -->
            <div class="mb-4 flex justify-center">
                <button id="update-btn" type="submit" class="px-6 py-3 text-white bg-blue-500 rounded-md hover:bg-blue-700 disabled:cursor-not-allowed disabled:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" disabled>
                    Actualizar Perfil
                </button>
            </div>
        </form>

        <!-- Enlace para volver a la vista de chats -->
        <div class="text-center mt-6">
            <a href="/view/chats" class="text-blue-500 hover:text-blue-700 font-medium">Volver a Chats</a>
        </div>
    </div>

    <script src="/js/profileView.js"></script>
</body>
</html>
